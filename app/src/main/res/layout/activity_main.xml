<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/twitchLogo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp"
        app:srcCompat="@drawable/twitch_logo" />

    <TextView
        android:id="@+id/twitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="44dp"
        android:text="Welcome to Twitch!"
        android:textColor="@color/twitch_color"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitchLogo" />

    <TextView
        android:id="@+id/email"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="36dp"
        android:textSize="18dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitch" />

    <EditText
        android:id="@+id/emailBox"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/light_grey"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <TextView
        android:id="@+id/username"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailBox" />
    <EditText
        android:id="@+id/usernameBox"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/light_grey"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />
    <TextView
        android:id="@+id/password"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameBox" />
    <EditText
        android:id="@+id/passwordBox"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/light_grey"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />
    <TextView
        android:id="@+id/dob"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Date of Birth"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordBox" />
    <EditText
        android:id="@+id/dobBox"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/light_grey"
        android:ems="10"
        android:inputType="datetime"
        android:hint="mm/dd/yyyy"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dob" />

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="By clicking Sign Up, you are indicating that you have read and acknowledge the Terms of Service and Privacy Notice."
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dobBox" />

    <Button
        android:id="@+id/sigUpButton"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/round_corner"
        android:text="Sign Up"
        android:textColor="@color/grey"
        android:textSize="18dp"
        app:backgroundTint="@color/pinball"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disclaimer" />


</androidx.constraintlayout.widget.ConstraintLayout>